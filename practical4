/* write a program to find area of triangle (a=h*b*.5)
 a= area , h= height , b= base. */
 
#include<stdio.h>
#include<conio.h>
void main()
{
    float a,b,h;
    clrscr();
    printf("enter base and height:");
    scanf("%f%f",&b,&h);
    (a=h*b*.5);
    printf("area of the given triangle is:%f",a);
    getch();
}
